<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Definindo as propriedades -->
    <property name="LOGS" value="/app/logs" />
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Direciona para System.err para coloração de logs no Docker -->
        <target>System.err</target>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- Arquivo de Log Global -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/mcp-server.log</file>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/mcp-server-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Arquivo apenas para erros -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/error.log</file>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>
    
    <!-- Arquivo específico para requisições HTTP detalhadas -->
    <appender name="HTTP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/http-requests.log</file>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/http-requests-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Logger específico para requisições HTTP -->
    <logger name="chatgm.com.mcp_server.config.RequestLoggingConfig" level="INFO" additivity="false">
        <appender-ref ref="HTTP_LOG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Logger para o MCP transport - reduzir o nível de log para WARN -->
    <logger name="io.modelcontextprotocol.server.transport" level="WARN"/>
    
    <!-- Logger para filtrar logs de ping do Spring -->
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="OFF"/>
    <logger name="org.springframework.web.servlet.DispatcherServlet" level="INFO"/>
    
    <!-- Logger para Tomcat Access Log Valve -->
    <logger name="org.apache.catalina.valves.AccessLogValve" level="INFO"/>
    
    <!-- Spring Web mais verboso apenas em desenvolvimento -->
    <springProfile name="dev">
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>
    
    <!-- Configuração padrão para produção -->
    <springProfile name="prod">
        <logger name="org.springframework" level="WARN"/>
        <logger name="chatgm.com.mcp_server" level="INFO"/>
    </springProfile>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
</configuration>